<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_start"
            style="@style/et"
            android:hint="开打数" />

        <EditText
            android:id="@+id/et_totlewin2"
            style="@style/et"
            android:hint="总净胜2" />

        <EditText
            android:id="@+id/et_totlewin3"
            style="@style/et"
            android:hint="总净胜3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/award_num2"
            style="@style/et"
            android:hint="近多少数award2" />

        <EditText
            android:id="@+id/award_num3"
            style="@style/et"
            android:hint="近多少数award3" />

        <EditText
            android:id="@+id/last_num2"
            style="@style/et"
            android:hint="近多少数win2" />

        <EditText
            android:id="@+id/last_num3"
            style="@style/et"
            android:hint="近多少数win3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/k21"
            style="@style/et"
            android:hint="k21" />

        <EditText
            android:id="@+id/k22"
            style="@style/et"
            android:hint="k22" />
        <EditText
            android:id="@+id/k23"
            style="@style/et"
            android:hint="k23" />

        <EditText
            android:id="@+id/k24"
            style="@style/et"
            android:hint="k24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/k31"
            style="@style/et"
            android:hint="k31" />

        <EditText
            android:id="@+id/k32"
            style="@style/et"
            android:hint="k32" />

        <EditText
            android:id="@+id/k33"
            style="@style/et"
            android:hint="k33" />

        <EditText
            android:id="@+id/k34"
            style="@style/et"
            android:hint="k34" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>